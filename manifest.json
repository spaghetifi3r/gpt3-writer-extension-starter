{
  "name": "Talk 2 God",
  "description": "Stuck on a spiritual dillema? Have a moral problem? Ask God :)",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "assets/48.png",
    "72": "assets/72.png",
    "96": "assets/96.png",
    "144": "assets/144.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Questions with God"
  },
  "background": {
    "service_worker": "scripts/contextMenuServiceWorker.js"
  },
  "permissions": ["contextMenus", "tabs", "storage"],
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
        "matches": ["http://*/*"],
        "js": ["scripts/content.js"]
    }
  ]
}
